{% extends 'base.html.twig' %}

{% block subtitle %}Szczegóły kategorii{% endblock %}

{% block page_title %}
    Kategorie
{% endblock %}

{% block page_subtitle %}
    Szczegóły kategorii
{% endblock %}

{% block page_content %}
    <table class="table">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Kategoria nadrzędna</th>
                <td>{% if category.parent is not empty %}{{ category.parent.name }}{% else %}Brak{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">Powrót do listy</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">Edycja</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
